# Configurações do servidor
HOST=0.0.0.0
PORT=3333
WORKERS=0  # 0 = usar num_cpus::get()

# Configurações de fonte
FONT_PATH=assets/DejaVuSans.ttf
FONT_HEIGHT_RATIO=0.10  # Percentual da altura da imagem
FONT_HEIGHT_MIN=10.0    # Altura mínima em pixels
FONT_WIDTH_RATIO=0.6    # Relação entre largura e altura

# Configurações de cores (RGBA format, valores de 0-255)
WATERMARK_COLOR_R=255
WATERMARK_COLOR_G=255
WATERMARK_COLOR_B=255
WATERMARK_COLOR_A=46   # 255 * 0.18 = ~46 (18% de opacidade)

SHADOW_COLOR_R=0
SHADOW_COLOR_G=0
SHADOW_COLOR_B=0
SHADOW_COLOR_A=46     # 255 * 0.18 = ~46 (18% de opacidade)

# Configurações de layout da marca d'água
SHADOW_OFFSET_RATIO=0.065
CHAR_SPACING_X_RATIO=1.1
CHAR_SPACING_Y_RATIO=0.4
GLOBAL_OFFSET_X_RATIO=-0.5
GLOBAL_OFFSET_Y_RATIO=-1.0

# Configurações de requisição HTTP
HTTP_POOL_MAX_IDLE=10
HTTP_CONNECT_TIMEOUT=10  # segundos
HTTP_REQUEST_TIMEOUT=60  # segundos

# Configuração de qualidade da imagem de saída
JPEG_QUALITY=90  # 0-100 